<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/post_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="世界为我让路"
            android:textSize="12dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/post_item_floor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5#"
            android:textSize="12dp"
            android:layout_weight="1"
            android:gravity="right"/>
    </LinearLayout>


    <TextView
        android:id="@+id/post_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-3-29 08:05:30:0"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/post_item_reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="那倒是vndskvndsvkldsnvk"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/post_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="那倒是vndskvndsvkldsnvk"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>